generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model HeroBanner {
  id          String   @id @default(uuid())
  badgeText   String?
  title       String?
  subtitle    String?
  imageUrl    String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  buttonText1 String?
  buttonText2 String?

  @@map("hero_banner")
}

model TextSection {
  id          String   @id @default(uuid())
  journeyTag  String?
  title       String
  emphasis    String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isActive    Boolean  @default(true)

  @@map("text_section")
}

model CompanyExperienceText {
  id          String   @id @default(uuid())
  number      Int
  suffix      String?
  title       String
  description String?
  order       Int
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("company_experience")
}

model FeaturedImage {
  id          String   @id @default(uuid())
  order       Int      @unique
  label       String
  title       String
  description String
  imageUrl    String
  iconUrl     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isActive    Boolean  @default(true)

  @@map("featured_image")
}

model PropertySearchStep {
  id          String   @id @default(uuid())
  stepNumber  Int
  title       String
  description String?
  imageUrl    String
  statusText  String?
  statusIcon  String?
  order       Int
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("property_search_steps")
}

model ContactInfo {
  id           String             @id @default(uuid())
  fullAddress  String
  country      String
  phone        String
  email        String
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
  openingHours OpeningHourGroup[]
}

model OpeningHourGroup {
  id            String      @id @default(uuid())
  contactInfoId String
  days          String
  openTime      String?
  closeTime     String?
  isClosed      Boolean     @default(false)
  contactInfo   ContactInfo @relation(fields: [contactInfoId], references: [id])
}

model Testimonial {
  id                           String   @id @default(uuid())
  content                      String
  authorName                   String
  authorInitial                String?
  authorTitle                  String
  authorLocation               String
  rating                       Int
  createdAt                    DateTime @default(now())
  updatedAt                    DateTime @updatedAt
  propertyCategory             String
  propertyPurchaseValue        Float
  propertyPurchaseValueDisplay String
  propertyTitle                String
}

model Admin {
  id             String        @id @default(uuid())
  email          String        @unique
  name           String
  password       String
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  projectsPageId String?
  ProjectsPage   ProjectsPage? @relation(fields: [projectsPageId], references: [id])
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CareerPage {
  id                String   @id @default(uuid())
  updatedAt         DateTime @updatedAt
  heroImage         String   @default("/career.jpg")
  heroSubtitle      String   @default("Weâ€™re always looking for talented people. Explore opportunities and grow your career with us!")
  heroTitle         String   @default("Join Our Team")
  jobsBadge         String   @default("Join The Team")
  jobsDescription   String   @default("Discover the role that will challenge you, inspire you, and let you make a real impact.")
  jobsTitle         String   @default("Current Positions")
  perksBadge        String   @default("Employee Benefits")
  perksDescription  String   @default("We believe that when you feel your best, you do your best work.")
  perksTitle        String   @default("Everything You Need To Thrive.")
  valuesBadge       String   @default("Our Core Philosophy")
  valuesDescription String   @default("At Geek Estate, we don't just build properties; we build legacies.")
  valuesTitle       String   @default("Driven by Purpose")
  createdAt         DateTime @default(now())
}

model Job {
  id               String   @id @default(uuid())
  title            String
  description      String
  longDescription  String?
  responsibilities String[]
  requirements     String[]
  salary           String
  experience       String
  location         String
  deadline         DateTime
  jobType          String?
  vacancies        String?
  category         String?
  gender           String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model CareerPerk {
  id          String   @id @default(uuid())
  title       String
  description String
  icon        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model CareerValue {
  id          String   @id @default(uuid())
  title       String
  description String
  icon        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Project {
  id             String        @id @default(uuid())
  title          String
  description    String?
  image          String
  location       String
  date           String?
  price          String?
  beds           Int?
  baths          Int?
  area           Float?
  category       String?
  status         String?
  featured       Boolean       @default(false)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  projectsPageId String?
  ProjectsPage   ProjectsPage? @relation(fields: [projectsPageId], references: [id])
}

model ProjectsPage {
  id              String    @id @default(uuid())
  heroBadge       String    @default("Exclusive Portfolio")
  heroTitle       String    @default("Curated Excellence")
  heroDescription String    @default("Explore a world of architectural marvels.")
  statsCount1     String    @default("140+")
  statsLabel1     String    @default("Properties")
  statsCount2     String    @default("12")
  statsLabel2     String    @default("Cities")
  heroImages      String[]  @default(["/outdoor-real-state/1.webp"])
  ctaBadge        String    @default("Bespoke Service")
  ctaTitleRegular String    @default("Can't find exactly what")
  ctaTitleItalic  String    @default("you're looking for?")
  ctaDescription  String    @default("Our private collection includes exclusive off-market listings.")
  ctaButtonText   String    @default("Contact Our Team")
  updatedAt       DateTime  @updatedAt
  createdAt       DateTime  @default(now())
  Admin           Admin[]
  Project         Project[]
}

enum Role {
  USER
  ADMIN
}
