generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model HeroBanner {
  id          String   @id @default(uuid())
  badgeText   String?
  title       String?
  subtitle    String?
  imageUrl    String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  buttonText1 String?
  buttonText2 String?

  @@map("hero_banner")
}

model TextSection {
  id          String   @id @default(uuid())
  journeyTag  String?
  title       String
  emphasis    String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isActive    Boolean  @default(true)

  @@map("text_section")
}

model FeaturedImage {
  id          String   @id @default(uuid())
  order       Int      @unique
  label       String
  title       String
  description String
  imageUrl    String
  iconUrl     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isActive    Boolean  @default(true)

  @@map("featured_image")
}

model Admin {
  id        String   @id
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime
}

model User {
  id        String   @id
  email     String   @unique
  name      String
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime
}

model CareerPage {
  id                String   @id
  updatedAt         DateTime
  heroImage         String   @default("/career.jpg")
  heroSubtitle      String   @default("Weâ€™re always looking for talented people. Explore opportunities and grow your career with us!")
  heroTitle         String   @default("Join Our Team")
  jobsBadge         String   @default("Join The Team")
  jobsDescription   String   @default("Discover the role that will challenge you, inspire you, and let you make a real impact.")
  jobsTitle         String   @default("Current Positions")
  perksBadge        String   @default("Employee Benefits")
  perksDescription  String   @default("We believe that when you feel your best, you do your best work. That's why we've crafted a benefits package that supports you inside and outside the office.")
  perksTitle        String   @default("Everything You Need To Thrive.")
  valuesBadge       String   @default("Our Core Philosophy")
  valuesDescription String   @default("At Geek Estate, we don't just build properties; we build legacies. Our core values are the compass that guides every decision, ensuring we remain true to our mission of redefining modern living.")
  valuesTitle       String   @default("Driven by Purpose")
}

model Job {
  id               String   @id
  title            String
  description      String
  longDescription  String?
  responsibilities String[]
  requirements     String[]
  salary           String
  experience       String
  location         String
  deadline         DateTime
  jobType          String?
  vacancies        String?
  category         String?
  gender           String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime
}

model CareerPerk {
  id          String   @id
  title       String
  description String
  icon        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime
}

model CareerValue {
  id          String   @id
  title       String
  description String
  icon        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime
}

model Project {
  id          String   @id
  title       String
  description String?
  image       String
  location    String
  date        String?
  price       String?
  beds        Int?
  baths       Int?
  area        Float?
  category    String?
  status      String?
  featured    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime
}

enum Role {
  USER
  ADMIN
}
